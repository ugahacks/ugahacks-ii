				<%= link_to image_tag("logos/Roundsphere.png", class: "img-responsive giga"), "http://roundsphere.com/" %>
				<%= link_to image_tag("logos/Seller Labs (black).png", class: "img-responsive giga"), "http://www.sellerlabs.com/" %>
				<%= link_to image_tag("logos/State Farm.png", class: "img-responsive giga"), "http://www.statefarm.com/" %>
				<br>
				<%= link_to image_tag("logos/NCR.png", class: "img-responsive mega"), "http://www.ncr.com/" %>
				<br>
				<%= link_to image_tag("logos/Perficient.png", class: "img-responsive light-background kilo"), "https://www.perficient.com/" %>
				<%= link_to image_tag("logos/Red Clay.png", class: "img-responsive kilo"), "http://redclay.com/" %>
				<%= link_to image_tag("logos/Top Pick.png", class: "img-responsive kilo"), "https://www.toppick.org/" %>
				<%= link_to image_tag("logos/Venmo.svg", class: "img-responsive kilo"), "https://www.venmo.com/" %>
				<%= link_to image_tag("logos/Aspirent.png", class: "img-responsive kilo"), "http://www.aspirent.com/" %>
				<%= link_to image_tag("logos/Thalmic Labs.png", class: "img-responsive light-background kilo"), "https://www.myo.com/"%>
				<%= link_to image_tag("logos/Namecheap.png", class: "img-responsive light-background kilo"), "https://www.namecheap.com" %>
				<%= link_to image_tag("logos/UGA College of Engineering.png", class: "img-responsive light-background kilo"), "http://www.engineering.uga.edu/" %>
				<%# image_tag("logos/Axon.png", class: "img-responsive light-background kilo") %>
			</div>
		</section>
		<section id="partners" class="row" >
			<div class="col-md-12">
				<h1 class="header">Partners</h1>
				<div class="row">
					<div class="row sponsor-row">
						<div class="col-md-12">
							<%= link_to image_tag("logos/MLH.png", class:"img-responsive light-background flow"), "http://mlh.io/" %>
							<%= link_to image_tag("logos/UGA ACM.png", class:"img-responsive flow"), "http://ugaacm.com/" %>
							<%= link_to image_tag("logos/UGA IEEE.png", class:"light-background img-responsive flow"), "http://ieee.uga.edu/" %>
							<%= link_to image_tag("https://pbs.twimg.com/profile_images/2075446500/logo_transparent.gif", class:"img-responsive flow"), "https://www.fourathens.com/" %>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
</body>
